<header class="bg-white shadow-sm">
  <div class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8 flex items-center justify-between">
    <h1 class="text-lg font-semibold leading-6 text-gray-900">
      <%= @match.fighter_1.name %> vs <%= @match.fighter_2.name %>
      <span class="text-sm text-gray-400 italic">(<%= @match.max_rounds %>)</span>
    </h1>
    <%= link_to edit_match_path(@match), class: "relative inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
      Edit Match
    <% end %>
  </div>
</header>

<main>
  <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">

    <p style="color: green"><%= notice %></p>


    <div class="flex mt-10">
      <div class="w-2/5 mx-auto">
        <!-- Content for the first column (45%) -->
        <%= render partial: "fighters/fighter_card", locals: { fighter: @match.fighter_1 } %>
      </div>
      <div class="w-1/5 mx-auto flex flex-col items-center justify-center">
        <!-- Content for the second column (10%) -->
        <div class="text-center text-3xl font-bold">VS</div>
        <div class="mt-3 text-center"><%= @match.max_rounds %> Rounds</div>
        <div class="mt-3 text-center font-bold">Purse</div>
        <div><%= number_to_currency(@match.match_purse, precision: 0) %></div>
      </div>
      <div class="w-2/5 mx-auto">
        <!-- Content for the third column (45%) -->
        <%= render partial: "fighters/fighter_card", locals: { fighter: @match.fighter_2 } %>
      </div>
    </div>

    <div class="mt-10 flex items-center justify-end gap-x-6">
        <%= link_to fight_match_path(@match), class: "text-sm font-semibold leading-6 text-gray-900" do %>
          Fight
      <% end %>
      <%= link_to matches_url, class: "text-sm font-semibold leading-6 text-gray-900" do %>
        Back to Matches
      <% end %>
      <%= button_to "Delete", @match, method: :delete, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>

    </div>


  </div>
</main>
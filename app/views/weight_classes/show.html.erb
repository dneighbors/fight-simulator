<header class="bg-white shadow-sm">
  <div class="mx-auto max-w-7xl px-4 py-4 sm:px-6 lg:px-8 flex items-center justify-between">
    <h1 class="text-lg font-semibold leading-6 text-gray-900">
      <%= @weight_class.name %>
      <span class="text-sm text-gray-400 italic">(Max Weight: <%= @weight_class.max_weight %> lbs)</span>
    </h1>
    <%= link_to edit_weight_class_path(@weight_class), class: "relative inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" do %>
      Edit Weight Class
    <% end %>
  </div>
</header>


<main>
  <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">

    <p style="color: green"><%= notice %></p>

    <div class="px-4 sm:px-6 lg:px-8">
      <div class="sm:flex sm:items-center">
        <div class="sm:flex-auto">
          <h1 class="mt-6 text-base font-semibold leading-6 text-gray-900">Rankings</h1>
        </div>
      </div>
      <div class="mt-2 flow-root">
        <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
            <table class="min-w-full divide-y divide-gray-300">
              <thead>
              <tr>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Current Rank</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Prev Rank</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Highest Rank</th>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-0">Fighter</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Record</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Winning Pct</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Last Opponent</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Next Match</th>
              </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">

              <% @weight_class.fighters.sort_by { |fighter| fighter.rank }.each do |fighter| %>
              <% next_opponent =  fighter.pending_matches.first&.opponent(fighter) %>
              <% last_opponent =  fighter.completed_matches.last&.opponent(fighter) %>

              <tr>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= fighter.rank %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= fighter.previous_rank %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= fighter.highest_rank %></td>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-0"><%= link_to fighter.name, fighter_url(fighter), class: "text-blue-500 hover:underline" %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= fighter.wins %> - <%= fighter.losses %> - <%= fighter.draws %> (<%= fighter.knockouts %> KOs)</td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= number_with_precision(fighter.winning_percentage, precision: 3).sub(/^0/, '') %></td>
                <% if last_opponent.nil? %>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">No Fights</td>
                <% else %>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= link_to last_opponent&.name, fighter_url(last_opponent), class: "text-blue-500 hover:underline" %></td>
                <% end %>
                <% if next_opponent.nil? %>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">TBA. <%= link_to "Schedule One", new_match_url(fighter_1_id: fighter.id, weight_class_id: @weight_class.id), class: "text-blue-500 hover:underline" %></td>
                <% else %>
                  <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= link_to next_opponent&.name, fighter_url(next_opponent), class: "text-blue-500 hover:underline" %></td>
                <% end %>
              </tr>
              <% end %>

              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>



    <div class="mt-10 flex items-center justify-end gap-x-6">
      <%= link_to new_fighter_url(weight_class_id: @weight_class.id), class: "text-sm font-semibold leading-6 text-gray-900" do %>
        Create Fighter in <%= @weight_class.name %>
      <% end %>
      <%= link_to weight_classes_url, class: "text-sm font-semibold leading-6 text-gray-900" do %>
        Back to Weight Classes
      <% end %>
      <%= button_to "Delete", @weight_class, method: :delete, class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>

    </div>


  </div>
</main>




